<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#263238"
        android:paddingLeft="@dimen/size_10"
        android:paddingTop="@dimen/size_10"
        android:paddingBottom="@dimen/size_10"
        android:text="@string/setting_about"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_24" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/company_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_4"
                android:paddingTop="@dimen/size_7"
                android:paddingBottom="@dimen/size_14"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20"
                tools:text="@string/setting_about_company" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/long_separator_line" />

            <TextView
                android:id="@+id/version_name_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_4"
                android:paddingTop="@dimen/size_7"
                android:paddingBottom="@dimen/size_7"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20"
                tools:text="@string/setting_about_version_name" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/long_separator_line" />

            <TextView
                android:id="@+id/imei_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_4"
                android:paddingTop="@dimen/size_7"
                android:paddingBottom="@dimen/size_7"
                android:text="@string/setting_about_imei"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/long_separator_line" />

            <TextView
                android:id="@+id/tv_android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/size_4"
                android:paddingTop="@dimen/size_7"
                android:paddingBottom="@dimen/size_7"
                android:text="@string/setting_about_system_name"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/long_separator_line" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>