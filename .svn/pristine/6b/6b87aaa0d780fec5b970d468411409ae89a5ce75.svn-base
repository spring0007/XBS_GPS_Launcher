<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <TextView 
        style="@style/userinfo_title"
        android:text="@string/userinfo_targett"
        android:drawableLeft="@drawable/userinfo_title_target"/>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_test_drawable_padding"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/userinfo_list_height"
        android:gravity="center_vertical"
        android:background="@color/userinfo_bg_list_selected"
        android:orientation="horizontal">
        
        <EditText 
            android:id="@+id/userinfo_edit_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/userinfo_list_padding_left"
            android:textSize="@dimen/userinfo_text_lable"
            android:textColor="@color/normal_text"
            android:background="@null"
            android:inputType="number"
            android:hint="@string/userinfo_target_step"/>
        
        <ImageView 
            android:id="@+id/userinfo_edit_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="center"
            android:src="@drawable/userinfo_name_delete"
            android:paddingStart="@dimen/userinfo_list_padding_left"
            android:paddingEnd="@dimen/userinfo_list_padding_left"/>
    </LinearLayout>
</LinearLayout>
