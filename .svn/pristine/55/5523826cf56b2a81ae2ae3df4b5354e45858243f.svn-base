<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <TextView 
        android:id="@+id/sit_title"
        style="@style/title_style"
        android:text="@string/healthalarm_sit"/>
    
    <TextView 
        android:id="@+id/sit_setting"
        android:layout_alignParentBottom="true"
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/healthalarm_setting"
        android:drawableTop="@drawable/healthalarm_setting"/>
    
    <ImageView 
        android:layout_above="@id/sit_setting"
        android:layout_below="@id/sit_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/sit_icon"/>
</RelativeLayout>
