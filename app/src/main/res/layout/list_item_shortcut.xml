<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/applist_item_height"
    android:orientation="horizontal"
    android:gravity="center_vertical|left">
    
    <com.sczn.wearlauncher.menu.view.MenuIconImage 
        android:id="@+id/shortcut_icon"
        android:padding="10dp"
        android:layout_width="@dimen/applist_item_height"
        android:layout_height="@dimen/applist_item_height"/>
 
    <View 
        android:layout_width="@dimen/menu_vertical_text_gap"
        android:layout_height="@dimen/menu_vertical_text_gap"/>
    
    <com.sczn.wearlauncher.base.view.ScrollerTextView
        android:id="@+id/shortcut_name"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_vertical_textsize"/>
    
</LinearLayout>