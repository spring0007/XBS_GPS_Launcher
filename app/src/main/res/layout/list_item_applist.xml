<?xml version="1.0" encoding="utf-8"?>
<com.sczn.wearlauncher.menu.view.MenuVerticalItem xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_90"
    android:gravity="center_vertical|left"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/menu_vertical_start_gap"
    app:is_app_item="true"
    app:item_translation_max="@dimen/menu_vertical_icon_translation">

    <com.sczn.wearlauncher.menu.view.MenuIconImage
        android:id="@+id/applist_icon"
        android:layout_width="@dimen/size_90"
        android:layout_height="@dimen/applist_item_height" />

    <View
        android:layout_width="@dimen/menu_vertical_text_gap"
        android:layout_height="@dimen/menu_vertical_text_gap" />

    <com.sczn.wearlauncher.base.view.ScrollerTextView
        android:id="@+id/applist_name"
        android:layout_width="@dimen/applist_item_textwidth"
        android:layout_height="wrap_content"
        android:textSize="@dimen/menu_vertical_textsize" />

</com.sczn.wearlauncher.menu.view.MenuVerticalItem>