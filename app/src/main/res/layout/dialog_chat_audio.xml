<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transport">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/temp_dialog_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_5">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/id_recorder_dialog_icon"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/text_size_80"
                android:src="@drawable/temp_recorder"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/id_recorder_dialog_voice"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/text_size_80"
                android:src="@drawable/temp_v1"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>