<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wearlauncher="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <com.sczn.wearlauncher.menu.view.MenuBgView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        wearlauncher:forWhich="menu" />

    <com.sczn.wearlauncher.base.view.VerticalViewPager
        android:id="@+id/item_menu_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ViewAnimator
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <fragment
            android:id="@+id/bar_fragment"
            android:name="com.sczn.wearlauncher.status.PhoneStatusBarFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="bar_fragment" />
    </ViewAnimator>

</RelativeLayout>




