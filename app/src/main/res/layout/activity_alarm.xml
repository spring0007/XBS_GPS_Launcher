<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.sczn.wearlauncher.contact.view.MYScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/size_8">

            <ImageView
                android:id="@+id/tips_image"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_24"
                android:src="@drawable/clock_bg" />

            <TextView
                android:id="@+id/tips_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:textColor="#FE9800"
                android:textSize="@dimen/text_size_26"
                tools:text="00:00" />

            <TextView
                android:layout_width="@dimen/size_120"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_10" />

            <TextView
                android:id="@+id/tips_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_24"
                android:layout_marginRight="@dimen/size_24"
                android:layout_marginTop="@dimen/size_10"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_25"
                tools:text="aaaa" />

        </LinearLayout>
    </com.sczn.wearlauncher.contact.view.MYScrollView>
</FrameLayout>