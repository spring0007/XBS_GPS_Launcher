<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowBackground">@drawable/main_bg</item>
    </style>

    <!-- application theme fullscreen-->
    <style name="Theme.AppCompat.Fullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 
    <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>  
	    <item name="android:windowExitAnimation">@anim/activity_open_exit</item> 
     -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:fragmentOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:fragmentOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:fragmentCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:fragmentCloseExitAnimation">@anim/activity_close_exit</item>
        <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_open_exit</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:backgroundDimEnabled">false</item><!--activity不变暗-->
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="style_text">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="style_text_small" parent="@style/style_text">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_text_medium" parent="@style/style_text">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_large" parent="@style/style_text">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>


    <!-- status icon -->
    <style name="style_status_icon_contain">
        <item name="android:layout_width">@dimen/status_icon_width</item>
        <item name="android:layout_height">@dimen/status_icon_height</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_status_icon_image">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- <item name="android:indeterminateDrawable">@drawable/seekbar_bg</item> -->
    <style name="style_wearlauncher_seekbar" parent="@android:style/Widget.SeekBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/seekbar_bg</item>

        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:thumbOffset">@dimen/seek_bar_thumb_offset</item>
        <item name="android:focusable">true</item>
        <item name="android:mirrorForRtl">true</item>
    </style>

    <!-- 
    <item name="android:windowEnterAnimation">@anim/dialog_push_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_push_out</item>
     -->
    <style name="dialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:windowExitAnimation">@anim/activity_open_exit</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:paddingLeft">@dimen/title_padding</item>
        <item name="android:paddingRight">@dimen/title_padding</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:drawablePadding">@dimen/title_padding_drawable</item>
        <item name="android:drawableBottom">@drawable/diliver_title</item>
    </style>

    <style name="bottom_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/normal_click_text</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_bottom_single_bg</item>
    </style>

    <style name="bottom_text_start_style" parent="@style/bottom_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="bottom_text_end_style" parent="@style/bottom_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@null</item>
    </style>

    <style name="bottom_center_diliver">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/normal_text</item>
    </style>

    <!-- healthalarm -->
    <style name="pick_weekday_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/alarm_pick_weekday_bg</item>
    </style>

    <!-- userinfo -->
    <style name="userinfo_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/userinfo_title_height</item>
        <item name="android:paddingStart">@dimen/userinfo_title_padding</item>
        <item name="android:background">@color/userinfo_bg_title</item>
        <item name="android:drawablePadding">@dimen/userinfo_test_drawable_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/userinfo_text_title</item>
    </style>

    <!-- 通讯录 -->
    <declare-styleable name="EdgeEffectView">
        <attr name="edgeeffect_color" format="color" />
    </declare-styleable>

    <!-- 微聊 -->
    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 交朋友 -->
    <style name="CustomProgressBar_Small">
        <item name="android:indeterminateDrawable">@drawable/progress_small_holo</item>
        <item name="android:minWidth">27dip</item>
        <item name="android:maxWidth">27dip</item>
        <item name="android:minHeight">27dip</item>
        <item name="android:maxHeight">27dip</item>
    </style>

    <!-- 通用Dialog样式 -->
    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--禁用掉系统Activity切换的动画-->
    <style name="Theme.notAnimation" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/notAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="notAnimation">
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

</resources>
