<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:padding="@dimen/margin_10">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="17:12"
                android:textColor="@color/black"
                android:textSize="@dimen/font_26" />

            <RelativeLayout
                android:id="@+id/rl_oneTime"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/tv_time_tip"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_onetime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week_onetime"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_onetime"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_oneTime"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week1"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week1"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week2"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week2"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week3"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week3"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week3"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week4"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week4"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week4"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week5"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week5"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week6"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week6"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_week7"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_50"
                android:layout_below="@+id/rl_week6"
                android:layout_marginTop="@dimen/margin_10">

                <TextView
                    android:id="@+id/tv_week7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_70"
                    android:gravity="center_vertical"
                    android:text="@string/str_week7"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_26" />

                <CheckBox
                    android:id="@+id/cb_week7"
                    android:layout_width="@dimen/margin_50"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/margin_70"
                    android:background="@drawable/checkbox_style"
                    android:button="@null"
                    android:gravity="center_vertical" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_70"
                android:layout_below="@+id/rl_week7"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_cancle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_50"
                    android:src="@drawable/icon_cancle" />

                <ImageView
                    android:id="@+id/iv_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_50"
                    android:src="@drawable/icon_ok" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
